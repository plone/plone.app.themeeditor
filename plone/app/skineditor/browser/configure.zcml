<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser">
  
  <browser:page
    for="Products.CMFCore.interfaces.ISiteRoot"
    name="plone.app.skineditor.browse"
    class=".console.SkinsConsole"
    attribute="index"
    permission="plone.app.skineditor.ThemeEditor"
    />
  <browser:page
    for="Products.CMFCore.interfaces.ISiteRoot"
    name="plone.app.skineditor.layers"
    class=".console.SkinsConsole"
    attribute="layers"
    permission="plone.app.skineditor.ThemeEditor"
    />

  <browser:resource
    name="plone.app.skineditor.js"
    file="resources/skineditor.js"
    />
    
  <browser:resource
    name="plone.app.skineditor.css"
    file="resources/style.css"
    />
  <browser:resource
    name="plone.app.skineditor.icon"
    file="resources/icon.png"
    />
  <browser:page
    for="*"
    name="failsafe_main_template"
    template="failsafe_main_template.pt"
    permission="zope.Public"
    />
  
</configure>
