<?xml version="1.0"?>
<object name="portal_controlpanel" 
        meta_type="Plone Control Panel Tool"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n" 
        i18n:domain="plone.app.skineditor">

	<configlet title="Theme Editor" action_id="skineditor"
    appId="plone.app.skineditor" category="Plone" condition_expr=""
    icon_expr="string:$portal_url/++resource++plone.app.skineditor.icon?.png"
    url_expr="string:${portal_url}/@@plone.app.skineditor.browse"
    visible="True" i18n:attributes="title">
    <permission>plone.app.skineditor: Theme Editor</permission>
  </configlet>
  
</object>
